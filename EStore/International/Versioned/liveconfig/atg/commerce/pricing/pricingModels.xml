<!-- this file sets the cache mode to distributed for all promotion item descriptors so when preview
     is being used with a standalone preview server, all server instances in the cluster invalidate items
     in their cache when a change is made on the BCC server. -->

<gsa-template xml-combine="append">
  <item-descriptor name="closenessQualifierTranslation" cache-mode="distributed"></item-descriptor>
</gsa-template>
